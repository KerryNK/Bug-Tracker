{
  "name": "bug-tracker-backend",
  "version": "1.1.0",
  "description": "A robust bug tracking REST API built using the MERN stack (MongoDB, Express, React, Node.js).",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint .",
    "format": "prettier --write ."
  },
  "keywords": [
    "bug",
    "tracker",
    "issue-tracking",
    "mern",
    "express",
    "api"
  ],
  "author": "KerryNK",
  "license": "MIT",
  "dependencies": {
